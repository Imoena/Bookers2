<!DOCTYPE html>
<html lang="ja">
<div class="container">
  <div class="row">
    <div class="sidebar_content">
      <div class="col-xs-3">
        <h1>User info</h1>
          <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "noimage.jpg", size:'60x60' %>
            <div class="table">
            <table class="table">
              <tbody>
                <tr>
                  <th scope="row">name</th>
                    <td><%= @user.name %></td>
                </tr>
                <tr>
                  <th scope="row">introduction</th>
                    <td><%= @user.introduction %></td>
                </tr>
               </tbody>
              </table>
            </div>
            <% if @user.id == current_user.id %>
                  <div><%= link_to edit_user_path(@user) do %><button type="button" class="btn btn-default btn-block "><i class="glyphicon glyphicon-wrench"></i></button><% end %></div>
                <% end %>
         <h2>New book</h2>
         <%= form_for(@book) do |f| %>
           <% if @book.errors.any? %>
            <div id="error_explanation">
                <h2><%= @book.errors.count %>error prohibited this obj from being saved:</h2>
                  <ul>
                     <% @book.errors.full_messages.each do |message| %>
                     <li><%= message %></li>
                     <% end %>
                  </ul>
               </div>
             </div>
            <% end %>
            <h4>Title</h4>
              <%= f.text_field :title %>
            <h4>Opinion</h4>
              <%= f.text_area :body %>
            <%= f.submit 'Create Book' %>
          <% end %>
        </div>
          <div class="col-xs-9">
          <h2>Books</h2>
           <table class="table">
                <thead>
                  <tr>
                  <th></th>
                  <th>Title</th>
                  <th>Opinion</th>
                  </tr>
                </thead>

            <tbody>
              <% @books.each do |book| %>
               <tr>
                <td><%= link_to user_path(book.user) do %><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "noimage.jpg", size:'60x60' %><% end %></td>

                <td><%= link_to book_path(book.id) do %>
                <%= book.title %>
                <% end %></td>
                <td><%= book.body %></td>
               </tr>
              <% end %>
            </tbody>
          </table>
      </div>
    </div>
  </div>
</html>