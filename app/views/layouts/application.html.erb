<!DOCTYPE html>
<html lang="ja">
  <html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   
<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <!-- <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample1"> -->
        <!-- <span class="sr-only">Toggle navigation</span> -->
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <span class="navbar-text" style="font-size :20px; color: #fff;">Bookers</span>
    </div>
    <div class="collapse navbar-collapse" id="navbarEexample1">
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to user_path(current_user.id) do %>
                <span class= "glyphicon glyphicon-home">Home</span>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to users_path do %>
                <span class="glyphicon glyphicon-user">Users</span>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to books_path do %>
                <span class="glyphicon glyphicon-book">Books</span>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to destroy_user_session_path, method: :delete do %>
                <span class="glyphicon glyphicon-log-out">logout</span>
              <% end %>
            </li>
        <% else %>
            <li class="nav-item">
              <%= link_to root_path do %>
              <span class= "glyphicon glyphicon-home">Home</span>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to home_about_path do %>
                  <span class="glyphicon glyphicon-link">About</span>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_user_registration_path do %>
                <span class="glyphicon glyphicon-edit">sign up</span>
                <% end %>
            </li>
            <li class="nav-item">
              <%= link_to user_session_path do %>
              <span class="glyphicon glyphicon-log-in">login</span>
              <% end %>
            </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>

    <%= yield %>
  </body>
</html>